/*@import '../node_modules/codemirror/lib/codemirror.css'*/

// Reset
*
    margin 0
    padding 0

// Fonts
@font-face
    font-family 'Inconsolata'
    font-weight normal
    font-style normal
    src url('./Inconsolata-Regular.ttf')

@font-face
    font-family 'Inconsolata'
    font-weight bold
    font-style normal
    src url('./Inconsolata-Bold.ttf')

// Body
body
    background #27282d

// CodeMirror
.CodeMirror
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background none
    color #c5c5c5
    font-family Inconsolata
    font-size 14px
    letter-spacing 1px
    line-height 1.5em
    -webkit-font-smoothing antialiased

.CodeMirror-lines
    padding-top 52px
    padding-right 56px
    padding-bottom 52px
    padding-left 56px
    
// Cursor
.CodeMirror-cursor
    border-left-color #fff
    
// Selection
.CodeMirror-selected
    background #3f4147
.CodeMirror-focused .CodeMirror-selected
    background #3f4147
.CodeMirror-line::selection
.CodeMirror-line > span::selection
.CodeMirror-line > span > span::selection
    background #3f4147
.CodeMirror-line::-moz-selection
.CodeMirror-line > span::-moz-selection
.CodeMirror-line > span > span::-moz-selection
    background #3f4147

// Scrollbar
.CodeMirror-simplescroll-horizontal
.CodeMirror-simplescroll-vertical
    background none
    width 18px

.CodeMirror-simplescroll-horizontal div
.CodeMirror-simplescroll-vertical div
    background #fff
    border none
    width 7px
    border-radius 3px
    right 2px
    opacity 0.2
    
// Elements
.cm-title
    font-weight bold
    color #fff
    
.cm-parenthesis
    color #6cc3ee
    
.cm-brackets
    color #ed9ffe
    
.cm-checked
    color #8dd22d

.cm-checked-value
    color #8dd22d
    text-decoration line-through
    
.cm-danger
    color #f05435

.cm-danger-value
    color #f05435
    
.cm-warning
    color #ffc32f

.cm-warning-value
    color #ffc32f